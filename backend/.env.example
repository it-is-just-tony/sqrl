PORT=4000
# IMPORTANT: Set to match your actual database (appdb/appuser if created by fullstack-harden.sh)
# Example (replace <PASSWORD>):
# DATABASE_URL=postgres://appuser:<PASSWORD>@localhost:5432/appdb
# Or if you created a sqrl database/user manually:
# DATABASE_URL=postgres://sqrl_user:<PASSWORD>@localhost:5432/sqrl
DATABASE_URL=postgres://appuser:CHANGE_ME@localhost:5432/appdb
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info
# Optional API key to protect mutating or sensitive endpoints
# If set, clients must send:  X-API-Key: <value>
API_KEY=change-me
# Rate limit max requests per minute (default 60 if unset)
RATE_LIMIT=60
